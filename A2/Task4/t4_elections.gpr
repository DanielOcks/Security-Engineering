project T4_Elections is
   for Main use ("t4_elections.adb");
   for Source_Dirs use ("src");
   for Object_Dir use "bin";

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-gnato",
                                        "-gnatwa", "-gnatwe",
                                        "-gnatQ", "-gnat12", "-gnata");
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-g");
   end Builder;
end T4_Elections;
